<?xml version="1.0" encoding="UTF-8"?>

<!-- http://www.phpunit.de/manual/current/en/appendixes.configuration.html -->
<phpunit
    backupGlobals               = "false"
    backupStaticAttributes      = "false"
    colors                      = "true"
    convertErrorsToExceptions   = "true"
    convertNoticesToExceptions  = "true"
    convertWarningsToExceptions = "true"
    processIsolation            = "false"
    stopOnFailure               = "false"
    syntaxCheck                 = "false"
    bootstrap                   = "../../src/symfony2/app/bootstrap.php.cache" >

    <testsuites>
        <testsuite name="PhpOrchestra Test Suite">
            <directory>../../src/symfony2/vendor/php-orchestra/*-bundle/PHPOrchestra/*Bundle/Tests</directory>
        </testsuite>
    </testsuites>

    <logging>
        <log type="coverage-clover" target="../logs/clover.xml" />
        <log type="coverage-html" target="../coverage"  />
        <log type="junit" target="../logs/junit.xml" />
    </logging>

    <!--
    <php>
        <server name="KERNEL_DIR" value="/path/to/your/app/" />
    </php>
    -->

    <filter>
        <whitelist>
            <directory>../../src/symfony2/vendor</directory>
            <exclude>
                <directory>../../src/symfony2/src/*/*Bundle/Resources</directory>
                <directory>../../src/symfony2/src/*/*Bundle/Tests</directory>
                <directory>../../src/symfony2/src/*/Bundle/*Bundle/Resources</directory>
                <directory>../../src/symfony2/src/*/Bundle/*Bundle/Tests</directory>
            </exclude>
        </whitelist>
    </filter>

</phpunit>

