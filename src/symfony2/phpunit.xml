<?xml version="1.0" encoding="UTF-8"?>

<!-- http://www.phpunit.de/manual/current/en/appendixes.configuration.html -->
<phpunit
    backupGlobals               = "false"
    backupStaticAttributes      = "false"
    colors                      = "false"
    convertErrorsToExceptions   = "true"
    convertNoticesToExceptions  = "true"
    convertWarningsToExceptions = "true"
    processIsolation            = "false"
    stopOnFailure               = "false"
    syntaxCheck                 = "false"
    bootstrap                   = "../../src/symfony2/app/bootstrap.php.cache" >

    <testsuites>
        <testsuite name="PhpOrchestra Test Suite">
            <directory>./vendor/php-orchestra/*-bundle/PHPOrchestra/*Bundle/Test</directory>
        </testsuite>
    </testsuites>

    <!-- logging>
        <log type="coverage-clover" target="../../build/logs/clover.xml" />
        <log type="coverage-html" target="../../build/coverage"  />
        <log type="junit" target="../../build/logs/junit.xml" />
    </logging -->

    <filter>
        <whitelist addUncoveredFilesFromWhitelist="true">
            <directory suffix=".php">./vendor/php-orchestra</directory>
            <exclude>
                <directory suffix=".php">./vendor/php-orchestra/*-bundle/PHPOrchestra/*Bundle/Controller</directory>
                <directory suffix=".php">./vendor/php-orchestra/*-bundle/PHPOrchestra/*Bundle/Test</directory>
                <directory suffix=".php">./vendor/php-orchestra/*-bundle/PHPOrchestra/*Bundle/Resources</directory>
            </exclude>
        </whitelist>
    </filter>

</phpunit>
