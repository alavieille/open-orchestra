<?xml version="1.0" encoding="UTF-8"?>

<!-- http://www.phpunit.de/manual/current/en/appendixes.configuration.html -->
<phpunit
    backupGlobals               = "false"
    backupStaticAttributes      = "false"
    colors                      = "true"
    convertErrorsToExceptions   = "true"
    convertNoticesToExceptions  = "true"
    convertWarningsToExceptions = "true"
    processIsolation            = "false"
    stopOnFailure               = "false"
    syntaxCheck                 = "false"
    bootstrap                   = "./app/bootstrap.php.cache" >

    <testsuites>
        <testsuite name="PhpOrchestra Test Suite">
            <directory>./vendor/php-orchestra/cms-bundle/PHPOrchestra/CMSBundle/Test</directory>
            <directory>./vendor/php-orchestra/theme-bundle/PHPOrchestra/ThemeBundle/Tests</directory>
        </testsuite>
    </testsuites>

    <filter>
        <whitelist>
            <directory>./vendor/php-orchestra/cms-bundle</directory>
            <exclude>
                <directory>./vendor/php-orchestra/cms-bundle/PHPOrchestra/CMSBundle/Resources</directory>
            </exclude>
            <directory>./vendor/php-orchestra/theme-bundle</directory>
        </whitelist>
    </filter>

</phpunit>
