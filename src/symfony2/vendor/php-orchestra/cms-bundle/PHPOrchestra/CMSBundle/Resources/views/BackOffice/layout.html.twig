<!DOCTYPE html PUBLIC "-//W3C//DTD HTML 4.01 Transitional//EN" "http://www.w3.org/TR/html4/loose.dtd">
<html>
    <head>
        <meta http-equiv="Content-Type" content="text/html; charset=utf-8">
        <title>{% block title %}PHPOrchestra{% endblock %}</title>
        {% block stylesheets %}
            <link rel="stylesheet" href="{{ asset('bundles/phporchestracms/css/jquery-ui.css') }}">
            <link rel="stylesheet" href="{{ asset('bundles/phporchestracms/css/bootstrap.min.css') }}">
            <link rel="stylesheet" href="{{ asset('bundles/phporchestracms/css/font-awesome.min.css') }}">
            <link rel="stylesheet" href="{{ asset('bundles/phporchestracms/css/smartadmin-production.css') }}">
            <link rel="stylesheet" href="{{ asset('bundles/phporchestracms/css/smartadmin-skins.css') }}">
            <link rel="stylesheet" href="{{ asset('bundles/phporchestracms/css/ribbon.css') }}">
            <link rel="stylesheet" href="{{ asset('bundles/phporchestracms/css/phpfactory.css') }}">
            <link rel="stylesheet" href="{{ asset('bundles/phporchestracms/css/ui.fancytree.css') }}">
            
            <link href="http://fonts.googleapis.com/css?family=Open+Sans:400italic,700italic,300,400,700" media="screen" rel="stylesheet" type="text/css" />
            <link rel="shortcut icon" href="http://phpfactory-bo.interakting.com/img/favicon/favicon.ico" type="image/x-icon" />
            <link rel="icon" href="http://phpfactory-bo.interakting.com/img/favicon/favicon.ico" type="image/x-icon" />
            
            <!-- TREE MENU : SHOULD BE LOADED ONLY WHEN REQUIRED -->
            <link rel="stylesheet" href="{{ asset('bundles/phporchestracms/css/template.css') }}">
            <link rel="stylesheet" href="{{ asset('bundles/phporchestracms/css/dnd.fancytree.css') }}">
            <link href="{{ asset('bundles/phporchestracms/fancytree/skin-win8/ui.fancytree.css') }}" rel="stylesheet" type="text/css">
            <!-- /TREE MENU -->
            
        {% endblock %}
        {% block javascripts %}
            <script src="{{ asset('bundles/phporchestracms/js/libs/jquery-2.0.2.min.js') }}"></script>
            <script src="{{ asset('bundles/phporchestracms/js/libs/jquery-ui-1.10.3.min.js') }}"></script>
            <script src="{{ asset('bundles/phporchestracms/js/app.js') }}"></script>
            <script src="{{ asset('bundles/phporchestracms/js/plugin/jquery-cookie/jquery.cookie.js') }}"></script>
            
            <!-- TREE MENU : SHOULD BE LOADED ONLY WHEN REQUIRED -->
            <script src="{{ asset('bundles/phporchestracms/js/plugin/fancytree/jquery.fancytree.js') }}"></script>
            <script src="{{ asset('bundles/phporchestracms/js/plugin/fancytree/jquery.fancytree.persist.js') }}" type="text/javascript"></script>
            <script src="{{ asset('bundles/phporchestracms/js/plugin/fancytree/jquery.fancytree.dnd.js') }}" type="text/javascript"></script>
            <script src="{{ asset('bundles/phporchestracms/js/plugin/jquery-contextmenu/jquery.ui-contextmenu.js') }}" type="text/javascript"></script>
            <script src="{{ asset('bundles/phporchestracms/js/plugin/jquery-contextmenu/jquery.ui-contextmenu.js') }}" type="text/javascript"></script>
            <script src="{{ asset('bundles/phporchestracms/js/template.js') }}"></script>
            <!-- /TREE MENU -->
            
        {% endblock %}
        
    </head>
    <body class="fixed-header fixed-ribbon fixed-navigation">
        <header>
            {% include 'PHPOrchestraCMSBundle:BackOffice:header.html.twig' %}
        </header>
        <aside id="left-panel">
            {% include 'PHPOrchestraCMSBundle:BackOffice:leftMenu.html.twig' %}
        </aside>
        <div id="main" role="main">
            <div id="ribbon">
            </div>
            <div id="content" style="opacity: 1;height:450px;top:-33px;">
                <div class="row">
                    <div class="col-xs-12 col-sm-3 col-md-4 col-lg-4">
                        <h1 class="page-title txt-color-blueDark">
                            {% block contentTitle %}{% endblock %}
                        </h1>
                    </div>
                <div class="col-xs-12 col-sm-9 col-md-8 col-lg-8"></div>
            </div>
            {% block content %}{% endblock %}                
        </div>
        {{ tinymce_init() }}
    </body>
</html>
