{% block orchestra_customField_widget %}
<fieldset>
    Type de champ : {{ form.vars.value.type }}<br /><br />
    {{ form_row(form.removeField) }}
    {{ form_row(form.label) }}
    {{ form_row(form.fieldId) }}
    {{ form_row(form.searchable) }}
    {% for key, value in form %}
        {% if key starts with 'option' %}
            {{ form_row(form[key]) }}
        {% endif %}
    {% endfor %}
</fieldset>
<br />
{% endblock %}

{% block orchestra_fieldSelect_widget %}
    {{ block('choice_widget') }} <button name="newfield" id="newfield" type="submit">Ajouter</button>
{% endblock %}