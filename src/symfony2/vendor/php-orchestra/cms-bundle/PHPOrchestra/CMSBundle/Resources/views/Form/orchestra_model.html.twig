{% block orchestra_areas_widget %}
    {% if form.vars.showDialog %}
        {% include dialog %}
        <script>
        $(document).ready(function(){
            $('#{{ form.parent.vars.name }}-model').data({"{{ form.vars.name }}": {{ value|raw }}});
        });
        </script>
    {% endif %}
    {{ form_widget(form) }}
{% endblock %}

