<html>
    <head>
        <title>{% block title %}{{ node.name }}{% endblock %}</title>
        {% block stylesheets %}
            {{ phpOrchestraCss(node.theme) }}
        {% endblock %}
        
        {#% stylesheets
            'bundles/fakeapptheme/themes/theme1/css/font.css'
            'bundles/fakeapptheme/themes/theme1/css/color.css'
            'bundles/fakeapptheme/themes/theme1/css/bg.css'
            filter='cssrewrite' %}
            <link rel="stylesheet" href="{{ asset_url }}" />
        {% endstylesheets %#}

    </head>
    <body>
        <div id="orchestra">
            <span>datetime : {{ datetime }}</span>
            <div id="orchestra-main">
        {% for area in node.areas %}
            {% include "PHPOrchestraCMSBundle:Node:area.html.twig" with {"area": area, "blocks": blocks} only %}
        {% endfor %}
            </div>
        </div>
        
        {% block javascripts %}
            {{ phpOrchestraJs(node.theme) }}
        {% endblock %}
        
        {#% javascripts
            '@FakeAppThemeBundle/Resources/public/themes/theme1/js/alert.js' %}
            <script src="{{ asset_url }}"></script>
        {% endjavascripts %#}
    </body>
</html>
