{% macro menu_links(links, name) %}
    <ul>
    {% for link in links %}
        <li id="tree-{{ name }}-{{ link.id._id }}" class="{{ link.id.class }}"><a href="{{ link.id.url }}">{{ link.id.name }}</a>
            {% if 'sublinks' in link|keys %}
                {{ _self.menu_links(link.sublinks, name) }}
            {% endif %}
        </li>
    {% endfor %}
    </ul>
{% endmacro %}