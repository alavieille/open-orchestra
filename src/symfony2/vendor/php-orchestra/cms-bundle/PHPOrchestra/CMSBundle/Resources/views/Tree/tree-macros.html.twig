{% macro menu_links(links, name) %}
    <ul class="connectedSortable">
    {% for link in links %}
        <li id="{{ link.id._id }}" class="{{ link.id.class }}">
            <div>
                <a href="{{ link.id.url }}">{{ link.id.name }}</a>
                    {% if 'sublinks' in link|keys %}
                        {{ _self.menu_links(link.sublinks, name) }}
                    {% endif %}
            </div>
        </li>
    {% endfor %}
    </ul>
{% endmacro %}