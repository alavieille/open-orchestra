{% set vars = {
    'title' : title
   }
%}

{% include 'PHPOrchestraCMSBundle:BackOffice:beginSmartDiv.html.twig' with vars %}

<div class="widget-body-toolbar">

</div>
<table id="datatable_fixed_column" class="table table-striped table-bordered smart-form">
    <thead>
        <tr class="second">
        {% for column in columns %}
            <td>
            {% if column.search is defined %}
                {% if column.search == 'text' %}
                    <label class="input">
                        <input type="text" name="{{ column.name }}" placeholder="Filter {{ column.label }}" class="search_init">
                    </label>
                {% endif %}
            {% endif %}
            </td>
        {% endfor %}
        </tr>
        <tr>
        {% for column in columns %}
            {% if column.search is defined %}
                <th>{{ column.label }}</th>
            {% else %}
                <th>&nbsp;</th>
            {% endif %}
        {% endfor %}
        </tr>
    </thead>
    <tbody>
    </tbody>
</table>

{% include 'PHPOrchestraCMSBundle:BackOffice:endSmartDiv.html.twig' %}
{% if ribbon is defined %}
    <div class="ribbon">
    {{ ribbon|raw }}
    </div>
{% endif %}

{% include 'PHPOrchestraCMSBundle:BackOffice/TableView:deleteDocumentDialog.html.twig' %}
<script type="text/javascript" src="{{ asset('bundles/phporchestracms/js/tableView.js') }}"></script>
<script type="text/javascript">
    loadDataTableScripts('{{ asset('bundles/phporchestracms/js/') }}', '{{ listUrl }}', {{ order|json_encode()|raw}});
</script>