<fieldset id="{{ area.area_id }}">
    <legend>{{ area.area_id }}</legend>
{% for sub_area in area.sub_areas %}
    {% include "PHPOrchestraCMSBundle:Node:area.html.twig" with {"area": sub_area, "blocks" : blocks} only %}
{% endfor %}
{% for block_reference in area.blocks %}
    {% set block = blocks.iterator[block_reference.block_id] %}
    {{ render(controller(block.component, {'block': block.attributes})) }}
{% endfor %}
</fieldset>
