{% extends 'PHPOrchestraCMSBundle:BackOffice:layout.html.twig' %}

{% block title %}{{ parent() }} : Template edition{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="http://code.jquery.com/ui/1.10.4/themes/smoothness/jquery-ui.css">
    <!--<link rel="stylesheet" href="{{ asset('bundles/phporchestracms/css/jquery-ui.css') }}">-->
    <link rel="stylesheet" href="{{ asset('bundles/phporchestracms/css/template.css') }}">
{% endblock %}


{% block javascripts %}
    {{ parent() }}
    <script src="http://code.jquery.com/jquery-1.9.1.js"></script>
    <script src="http://code.jquery.com/ui/1.10.4/jquery-ui.js"></script>
    <!--<script src="{{ asset('bundles/phporchestracms/js/jquery-1.9.1.js') }}"></script>
    <script src="{{ asset('bundles/phporchestracms/js/jquery-ui.js') }}"></script>-->
    
    <script src="{{ asset('bundles/phporchestracms/js/template.js') }}"></script>
{% endblock %}


{% block custom %}
    {% if form.vars.showDialog %}
        {% form_theme form 'PHPOrchestraCMSBundle:Form:extend.html.twig' %}
    {% endif %}
    {{ form(form) }}
{% endblock %}
