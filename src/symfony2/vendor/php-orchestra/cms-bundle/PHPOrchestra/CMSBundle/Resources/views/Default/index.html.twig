{% for node in nodes %}
<fieldset>
    <legend>{{ node.name }}</legend>
    &nbsp;nodeId : {{ node.nodeId }}<br/>
    &nbsp;siteId : {{ node.siteId }}<br/>
    &nbsp;name : {{ node.name }}<br/>
    &nbsp;version : {{ node.version }}<br/>
    &nbsp;language : {{ node.language }}<br/>
    &nbsp;Blocks :<br/>
    {% for block in node.blocks %}
        &nbsp;&nbsp;* Block component : {{ block.component }}<br/>            
    {% endfor %}
    &nbsp;Areas :<br/>
    {% for area in node.areas %}
        &nbsp;&nbsp;* Area areaId : {{ area.areaId }}<br/>
        &nbsp;&nbsp;* Area classes :
        {% for class in area.classes %}
            {{ class }}
        {% endfor %}
        <br/>
        &nbsp;&nbsp;* SubAreas :<br/>
        {% for subArea in area.subAreas %}
            &nbsp;&nbsp;&nbsp;&nbsp;. subArea areaId : {{ subArea.areaId }}<br/>            
        {% endfor %}
    {% endfor %}

</fieldset>

{% endfor %}
