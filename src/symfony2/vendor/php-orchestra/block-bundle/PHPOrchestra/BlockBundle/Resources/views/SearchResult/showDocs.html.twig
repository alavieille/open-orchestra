 <div id="docsid" class="showdoc">

 {# Display all documents in resultset #}
{% for doc in resultset %}
            <ul>
                {% for fieldname, fieldvalue in doc %}
                    {% if fieldname in fieldsdisplayed %}
                        <li class="field">{{ fieldvalue }}</li>
                    {% endif %}
                {% endfor %}
            </ul>
{% endfor %}
</div>

{# Pagination #}
{% set nombrepage = (resultset.numfound / nbdocs)| round(0, 'ceil') %}

{% if nombrepage > 1 %}
<div class="pagination">
	<ul>
		{# We use range(a, b) function which create an array of value between a and b #}
		
		{% for p in range(1, nombrepage ) %}
			<li{% if p == page %} class="btn"{% endif %}>
				<a href="{{ path('php_orchestra_cms_node', {'nodeId': nodeId, 'page': p, 'Search': data}) }}">{{ p }}</a>
			</li> 
		{% endfor %}
	</ul>
</div>
{% endif %}